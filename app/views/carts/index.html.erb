<h1>Listing carts</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
       <td><%=Product.find_by_id(cart.product_id).pname %></td>
       <td> <%= Product.find_by_id(cart.product_id).pprice %></td>
       <td><%= cart.quantity %></td>
       <td><%= cart.total %></td> 
       <td><%= link_to 'Delete', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

