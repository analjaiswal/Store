<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ptype %>
    <%= f.input :pname %>
    <%= f.input :pprice %>
    <%= f.input :description %>
    <%= f.input :pquantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
