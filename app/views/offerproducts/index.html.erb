<h1>Listing offerproducts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Offerprice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offerproducts.each do |offerproduct| %>
      <tr>
        <td><%= offerproduct.product_id %></td>
        <td><%= offerproduct.offerprice %></td>
        <td><%= link_to 'Show', offerproduct %></td>
        <td><%= link_to 'Edit', edit_offerproduct_path(offerproduct) %></td>
        <td><%= link_to 'Destroy', offerproduct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offerproduct', new_offerproduct_path %>
